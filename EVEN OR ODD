#include<stdio.h>
int main()
{
	int i,n,EC ,OC,A[10];
	printf("enter the size of the array");
	scanf("%d" , &n);
	printf("enter the  array elements");
	for(i=0;i<n;i++)
	scanf("%d", &A[i]);
	EC=0;
	OC=0;
	for(i=0;i<n;i++)
	{
	
	
		if(A[i]%2==0)
			  EC ++;
	     else
		   OC++;
	}
	    printf("\n the =%d",EC);
	   
		printf("\nthe odd count = %d",OC);
		return 0; 
	
}
